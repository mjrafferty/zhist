# vim:ft=zsh

__zhist_insert_stop () {

  local retval=$?
  local pipe_fd watch_fd

  if (( __ZHIST_RAN_CMD == 1 )); then

    __zhist_watcher_check

    __zhist_insert_query "
  UPDATE history SET
  exit_status = ${retval},
  duration = ${EPOCHSECONDS} - start_time
  WHERE id = (
    SELECT MAX(id)
    FROM history
    WHERE session = "${__ZHIST_SESSION}"
    AND exit_status IS NULL
    AND duration IS NULL
  );"

  fi

  __ZHIST_RAN_CMD=0

}

__zhist_insert_stop "$@"
